@model SchoolJournal.ViewModels.User
@{
    Layout = "_MainLayout";
    ViewBag.Title = "Авторизація";
}
    <div class="text-center mt-0">
        <form method="post">
            <h3 class="pt-2 mb-3 text-dark">Введіть ваші дані</h3>
            @if (ViewBag.IsGuest == null)
            {

            }
            else if (ViewBag.IsGuest == true)
            {
                <p class="text-danger pb-2"><b>Невірний логін або пароль!</b></p>
            }
            <div>
                <div class="row justify-content-center">
                    <label asp-for="Login" for="inputLogin" class="sr-only">Логін</label>
                    <input asp-for="Login" id="inputLogin" class="form-control col-3" placeholder="Логін" required autofocus />
                </div>
                <p></p>
                <div class="row justify-content-center">
                    <label asp-for="Password" for="inputPassword" class="sr-only">Пароль</label>
                    <input asp-for="Password" id="inputPassword" class="form-control col-3" type="password" placeholder="Пароль" required />
                </div>
                <p></p>
                <button type="submit" class="btn text-center" style="background-color: #152D35; color: #D4ECDD; ">Увійти</button>
            </div>
        </form>
    </div>
