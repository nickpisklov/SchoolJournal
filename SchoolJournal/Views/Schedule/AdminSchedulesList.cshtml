@model List<Class>
@{
    Layout = "_MainLayout";
    ViewBag.Title = "Розклади класів";
}
<h4 class="mt-3 text-center">Оберіть розклад</h4>
<div class="justify-content-center text-center">
    @foreach (Class clas in Model)
    {
        var parameters = new Dictionary<string, string>
        {
            {"classId", clas.Id.ToString() }
        };
        <a asp-action="AdminSetSessionClassId" asp-all-route-data="@parameters" class="btn btn-dark mt-3">Розклад для @clas.Title</a><br />
    }
</div>

